<h1><%= @article.title %></h1>
<p>Tags: <%= tag_links(@article.tags) %></p><br />
<p><%= @article.body %></p>
<br />

<h3>Comments (<%= @article.comments.size %>)</h3>
<%= render :partial => 'comment', :collection => @article.comments %>

<%= render :partial => 'comment_form' %>

<p><%= link_to "<< Back to Articles List", articles_path %></p>
<br />
<p><%= link_to "Delete", article_path(@article), :method => :delete, :confirm => "Really delete the article?" %></p>
<p><%= link_to "Edit", edit_article_path(@article) %>
